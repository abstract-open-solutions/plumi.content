<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plumi">

<!-- meta and link tags for facebook integration -->
<tal:block metal:fill-slot="head_slot" 
           define="portal context/@@plone_portal_state/portal;">
</tal:block>
<head>
    <metal:block fill-slot="column_two_slot" />
</head>
<body>
<metal:main fill-slot="main">
<tal:main-macro metal:define-macro="main">
    <link rel="stylesheet" type="text/css" media="screen" href="++resource++collective.upload/jquery.fileupload-ui.css" />
    <div id="upload-form-top">
                <form id="fileupload" action="." tal:attributes="action string:${context/absolute_url}/media_uploader" method="POST" enctype="multipart/form-data">
                    <div class="row">
                        <div class="cell position-0 width-full fileupload-buttonbar">
                            <div class="controls">
                                <span class="btn success fileinput-button">
                                    <span i18n:translate="">Add files or imagesâ€¦</span>
                                    <input type="file" name="files[]" multiple />
                                </span>
                                <button type="submit" class="btn start"><span class="" i18n:translate="">Start upload</span></button>
                                <button type="reset" class="btn cancel"><span class="" i18n:translate="">Cancel upload</span></button>
                                <button type="reset" class="btn danger delete"><span class="" i18n:translate="">Delete selected</span></button>
                                <input type="checkbox" class="toggle" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="cell position-0 width-full">
                            <table class="zebra-striped results">
                                <thead>
                                    <tr>
                                        <th colspan="6" class="nosort">
                                            <div class="progress-bar-container">
                                                <span i18n:translate="">Progress bar</span>
                                                <div class="progressbar fileupload-progressbar"><div style="width:0%;"></div></div>
                                            </div>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody class="files">
                                    <tr>
                                        <td colspan="6"></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </form>

        <ul class="formTabs" id="upload-tabs">
	        <li id="tab-basic" class="formTab firstFormTab"><a href="#" class="required"><span>Basic Info</span></a></li>
	        <li id="tab-categorize" class="formTab"><a href="#">Categorize</a></li>
	        <li id="tab-mobilise" class="formTab lastFormTab"><a href="#">Mobilise</a></li>
        </ul>
    </div>
    <div id="upload-form-middle" class="panes">
        <div id="tab1-content" class="tabcontent">
            *these fields are compulsory <br /><br />
            <label class="formQuestion">Title</label><span class="form_required">*</span><br />
            <input id="form_title" type="text" class="form_input" style="width:400px" /> <br /><br />
            <label class="formQuestion">Short Summary</label><span class="form_required">*</span><br /><span class="formHelp"> (describe your video in 160 characters) </span>
            <textarea id="form_summary" class="form_input" style="width:400px"></textarea> <br /><br />
            <label class="formQuestion">Description</label><span class="form_required">*</span><br /><span class="formHelp"> (you can add HTML and images) </span>
            <textarea id="form_description" class="form_input" style="width:400px"></textarea> <br /><br />
            <label class="formQuestion">Year Produced</label><span class="form_required">*</span><br />
            <select id="form_year" class="form_select"> 
                <option value="2012">2012</option>
                <option value="2011">2011</option>
            </select>
            <br /><br />
            <label class="formQuestion">Video Language</label><span class="form_required">*</span><br />
            <select id="form_language" class="form_select"> 
                <option value="EN">English</option>
                <option value="GR">Greek</option>
            </select>
            <br /><br />
            License*
            <br /><br />
            <label class="formQuestion">Add Thumbnail</label><br /> 
            <span class="formHelp">(we will automatically generate an image, but you may prefer to upload your own)</span>
            <input id="form_thumb" type="file" />
        </div>
        <div id="tab2-content" class="tabcontent">
            <div id="categorise-column1" class="tab2-columns">
                <b>CATEGORISE</b><br /><br />
                <label class="formQuestion">Genre</label><br />
                <select id="form_genre" class="form_select"> 
                    <option value="None">None</option>
                    <option value="Documentary">Documentary</option>
                </select>
                <br /><br />
                <label class="formQuestion">Country</label><br />
                <select id="form_country" class="form_select"> 
                    <option value="International">International</option>
                    <option value="EN">England</option>
                </select>
                <br /><br />
                <label class="formQuestion">Location(e.g. City or Region)</label><br />
                <input id="form_location" type="text" class="form_input" />
                <br /><br />
                <label class="formQuestion">Country</label><br />
                <select id="form_topics" multiple="multiple" class="form_select"> 
                    <option value="Activism">Activism</option>
                    <option value="Animal Rights">Animal Rights</option>
                </select>
                <br /><br />
            </div>
            <div id="categorise-column2" class="tab2-columns">
                <b>CREDITS</b><br /><br />
                <label class="formQuestion">Director</label><br />
                <input id="form_director" type="text" class="form_input" />
                <br /><br />
                <label class="formQuestion">Producer</label><br />
                <input id="form_producer" type="text" class="form_input" />
                <br /><br />
                <label class="formQuestion">E-mail Address</label><br />
                <input id="form_email" type="text" class="form_input" />
                <br /><br />
                <label class="formQuestion">Organisation / Project Name</label><br />
                <input id="form_organisation" type="text" class="form_input" />
                <br /><br />
                <label class="formQuestion">Production Company</label><br />
                <input id="form_company" type="text" class="form_input" />
                <br /><br />
                <label class="formQuestion">Website URL</label><br />
                <input id="form_website" type="text" class="form_input" />
                <br /><br />
            </div>
            <div id="categorise-tags">
                <label class="formQuestion">Tags </label><br /><span class="formHelp">(separate with commas)</span>
                <input type="text" id="form_tags" class="form_input" size="55" />
            </div>
        </div>
        <div id="tab3-content" class="tabcontent">
            Learn more...
        </div>  
        <input type="button" name="submit" value="SAVE CHANGES" id="form_submit" />
    </div>
    <script language="javascript">
        // perform JavaScript after the document is scriptable.
        $(function() {
            // setup ul.tabs to work as tabs for each div directly under div.panes
            $("ul.formTabs").tabs("div.panes > div");
        });
    </script>
</tal:main-macro>
</metal:main>
</body>
</html>
